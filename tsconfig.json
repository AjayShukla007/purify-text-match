{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,  // Generates .d.ts files
    "declarationMap": true  // For better source mapping
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}